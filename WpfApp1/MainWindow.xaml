<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <Button x:Name="Clear" Margin="10" Click="ClearButton" Height="26" Width="152" Content="Clear"/>
        <Button x:Name="Identify" Margin="10" Click="IdentifyButton" Height="26" Width="152" Content="Identify"/>
        <Border BorderBrush="Black" BorderThickness="2" Width="302" Height="305" Margin="10">
            <InkCanvas  x:Name="Canvas" 
                        Background="White" 
                        Width="300" Height="300" Margin="0,0,0,-1">
                <InkCanvas.DefaultDrawingAttributes>
                    <DrawingAttributes Color="Black" Width="30" Height="30" />
                </InkCanvas.DefaultDrawingAttributes>
            </InkCanvas>
        </Border>
    </StackPanel>
</Window>
