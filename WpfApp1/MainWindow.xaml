<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" Width="302" Height="305" Margin="25">
            <InkCanvas  x:Name="Canvas" 
                        Background="White" 
                        Width="300" Height="300" Margin="0,0,0,-1">
                <InkCanvas.Effect>
                    <BlurEffect Radius="5" KernelType="Gaussian" />
                </InkCanvas.Effect>
                <InkCanvas.DefaultDrawingAttributes>
                    <DrawingAttributes Color="Black" Width="40" Height="40" />
                </InkCanvas.DefaultDrawingAttributes>
            </InkCanvas>
        </Border>

        <Label x:Name="NumGuess" Content="" HorizontalAlignment="Center"/>
        <Label x:Name="Alert" Content="" HorizontalAlignment="Center"/>

        <Button x:Name="Clear" Margin="5" Click="ClearButton" Height="20" Width="100" Content="Clear"/>
        <Button x:Name="Identify" Margin="5" Click="IdentifyButton" Height="20" Width="100" Content="Identify"/>
        <Button x:Name="Train" Margin="5" Click="TrainButton" Height="20" Width="100" Content="Train"/>
        <Button x:Name="Save" Margin="5" Click="SaveButton" Height="20" Width="100" Content="Save Train Data"/>
        
    </StackPanel>
</Window>
